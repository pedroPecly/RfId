<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/bg_round"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/tv_coleta_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        tools:text="InventÃ¡rio: INV-12345 - Loja Centro" />

    <TextView
        android:id="@+id/tv_coleta_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        tools:text="Local: Estoque" />

    <TextView
        android:id="@+id/tv_coleta_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        tools:text="Data: 21/05/2025 14:30:25" />

    <TextView
        android:id="@+id/tv_coleta_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        tools:text="Total de itens: 42" />

    <Button
        android:id="@+id/btn_ver_detalhes"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:text="@string/historico_ver_detalhes"
        android:background="@drawable/bg_round"
        android:layout_gravity="end"
        android:layout_marginTop="8dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

</LinearLayout>
